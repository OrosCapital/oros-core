<g:form name="NomineeInfoForm" method="post" role="form" class="form-horizontal">

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="col-xs-6 col-sm-6 col-md-6">

            <div class="form-group">
                <label for="nomineeFirstName" class="col-sm-5 col-xs-6 control-label">First Name</label>
                <input type="text" class="col-sm-7 col-xs-8" placeholder="First Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'First Name'" id="nomineeFirstName" name="nomineeFirstName" value="" required>
            </div>

            <div class="form-group">
                <label for="nomineeLastName" class="col-sm-5 col-xs-6 control-label">Last Name</label>
                <input type="text" class="col-sm-7 col-xs-8" placeholder="Last Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Last Name'" id="nomineeLastName"
                       name="nomineeLastName" value="" required>
            </div>

            <div class="form-group">
                <label for="nomineeEmail" class="col-sm-5 col-xs-6 control-label">Email</label>
                <input type="email" class="col-sm-7 col-xs-8" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" id="nomineeEmail"
                       name="nomineeEmail" required>
            </div>

            <div class="form-group">
                <label for="nomineeAddressLine2" class="col-sm-5 col-xs-6 control-label">Address Line2</label>
                <input type="text" class="col-sm-7 col-xs-8" placeholder="Second Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Second Address'" id="nomineeAddressLine2"
                       name="nomineeAddressLine2" required>
            </div>

            <div class="form-group">
                <label for="nomineeAccountNo" class="col-sm-5 col-xs-6 control-label">Account No<span class="red">*</span></label>
                <input type="text" class="col-sm-7 col-xs-8" placeholder="Account No" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Account No'" id="nomineeAccountNo"
                       name="nomineeAccountNo" required>
            </div>

            <div class="form-group">
                <label class="col-sm-5 col-xs-6 control-label">Date of Birth<span class="red">*</span></label>
                <div class='input-group input-group-sm'>
                    <input id="dateOfBirthOfNominee" type="date"data-date-format="dd/mm/yy" class="date-picker form-control input-mask-date"/>
                    <label for="dateOfBirthOfNominee" class="input-group-addon">
                        <i class="glyphicon glyphicon-calendar"></i>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label for="nomineeBranchName" class="col-sm-5 col-xs-6 control-label">Branch name</label>
                <input type="text" class="col-sm-7 col-xs-8" placeholder="Branch Name Where Account is Held" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Branch Name Where Account is Held'" id="nomineeBranchName"
                       name="nomineeBranchName" required>
            </div>

        </div>

        <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="form-group">
                <label for="nomineeMiddleName" class="col-sm-5 col-xs-6 control-label">Middle Name</label>
                <input type="text" class="col-sm-7 col-xs-8" placeholder="Middle Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Middle Name'" id="nomineeMiddleName"
                       name="nomineeMiddleName" value="" required>
            </div>

            <div class="form-group">
                <label for="nomineePhoneNo" class="col-sm-5 col-xs-6 control-label">Contact No</label>
                <input type="text" class="col-sm-7 col-xs-8" placeholder="Contact No" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Contact No'" id="nomineePhoneNo"
                       name="nomineePhoneNo" required>
            </div>

            <div class="form-group">
                <label for="nomineeAddressLine1" class="col-sm-5 col-xs-6 control-label">Address Line1</label>
                <input type="text" class="col-sm-7 col-xs-8" placeholder="First Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'First Address'" id="nomineeAddressLine1"
                       name="nomineeAddressLine1" required>
            </div>

            <div class="form-group">
                <label for="nomineeGender"
                       class="col-sm-5 col-xs-6 control-label">Gender<span class="red">*</span></label>
                <select id="nomineeGender" class="col-sm-7 col-xs-8" name="nomineeGender" required>
                    <option value="Male" selected>Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>

            <div class="form-group">
                <label for="nomineeNatureofAccount"
                       class="col-sm-5 col-xs-6 control-label">Nature of Account</label>
                <select id="nomineeNatureofAccount" class="col-sm-7 col-xs-8" name="nomineeNatureofAccount" required>
                    <option value="current" selected>Current</option>
                    <option value="deposit">Deposit</option>
                </select>
            </div>

            <div class="form-group">
                <label for="nomineeRelation" class="col-sm-5 col-xs-6 control-label">Relationship with A/C holder</label>
                <input type="text" class="col-sm-7 col-xs-8" placeholder="Relationship with A/C holder" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Relationship with A/C holder'" id="nomineeRelation"
                       name="nomineeRelation" required>
            </div>

            <div class="form-group">
                <label for="status"
                       class="col-sm-5 col-xs-6 control-label">Status</label>
                <select id="status" class="col-sm-7 col-xs-8" name="status" required>
                    <option value="">-Select-</option>
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                </select>
            </div>
        </div>

    </div>
</div>

<div class="clearfix form-actions">
    <div class="col-md-offset-10 col-md-2">
        <g:actionSubmit class="btn btn-primary btn-sm"  name="create" value="Create" id="button-create" controller="com.oros.custom.vendorPostalAddress" action="save" />

    </div>
</div>

</g:form>